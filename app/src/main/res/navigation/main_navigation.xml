<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/Today">

    <fragment
        android:id="@+id/Today"
        android:name="com.example.timely1.Today"
        tools:layout="@layout/fragment_today" />
    <fragment
        android:id="@+id/This_week"
        android:name="com.example.timely1.This_week"
        tools:layout="@layout/fragment_this_week" />
    <fragment
        android:id="@+id/All_entries"
        android:name="com.example.timely1.All_entries"
        tools:layout="@layout/fragment_all_entries" />
    <fragment
        android:id="@+id/Earning"
        android:name="com.example.timely1.Earning"
        tools:layout="@layout/fragment_earning" />
    <fragment
        android:id="@+id/New_entries"
        android:name="com.example.timely1.New_entries"
        tools:layout="@layout/fragment_new_entries">
        <action
            android:id="@+id/action_to_new_entries"
            app:destination="@id/New_entries"
            app:launchSingleTop="true" /> <!-- Предотвращает дублирование -->
    </fragment>
    <fragment
        android:id="@+id/Setings"
        android:name="com.example.timely1.Setings"
        tools:layout="@layout/fragment_setings" />
    <fragment
        android:id="@+id/This_mounts"
        android:name="com.example.timely1.This_mounts"
        tools:layout="@layout/fragment_this_mounts" />
</navigation>